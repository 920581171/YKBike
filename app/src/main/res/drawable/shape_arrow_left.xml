<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 倒三角 -->
    <item>
        <rotate
            android:fromDegrees="45"
            android:pivotX="500%"
            android:pivotY="80%">
            <shape android:shape="rectangle">
                <size
                    android:width="8dp"
                    android:height="64dp" />
                <solid android:color="#99CCFF" />
            </shape>
        </rotate>
    </item>
</layer-list>